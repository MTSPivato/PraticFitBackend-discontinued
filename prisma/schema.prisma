generator client {
  provider = "prisma-client-dart"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
	id       				Int      @id @default(autoincrement())
	name     				String   
	email 	  			String	 @unique
	password 				String
	dt_created 			DateTime @default(now())
	dt_updated 			DateTime @default(now())
	dt_desactivated DateTime?
	role     				UserRole @default(user)
}

enum UserRole {
	admin
	user
}